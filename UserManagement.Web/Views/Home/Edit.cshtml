@model UserManagement.Web.Models.UserViewModel

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form asp-controller="Home" asp-action="Edit" method="post" class="form-horizontal" role="form">
            <fieldset>
                <legend>Edit User</legend>
                <input type="hidden" asp-for="User.UserId">
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="User.Username">@Html.DisplayNameFor(m => m.User.Username)</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="@Html.DisplayNameFor(m => m.User.Username)" class="form-control" asp-for="User.Username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="User.FirstName">@Html.DisplayNameFor(m => m.User.FirstName)</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="@Html.DisplayNameFor(m => m.User.FirstName)" class="form-control" asp-for="User.FirstName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="User.LastName">@Html.DisplayNameFor(m => m.User.LastName)</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="@Html.DisplayNameFor(m => m.User.LastName)" class="form-control" asp-for="User.LastName">
                    </div>
                </div>
                @for (var i = 0; i < Model.Roles.Count; i++)
                {
                <div class="form-check">
                    <label class="form-check-label">
                        @Html.CheckBox(
                            $"User.UserRoles[{@i}].RoleId", 
                            Model.User.UserRoles.Any(ur => Model.Roles[i].RoleId == ur.RoleId),
                            new { value = Model.Roles[i].RoleId })
                        @Model.Roles[i].Name
                    </label>
                </div>
                }
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->